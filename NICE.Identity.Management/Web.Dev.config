<!-- IDAM-456 This transformation file is needed to deal with the mismatching versions of IIS on the different environments. For Dev and Test it adds
the rewrite rule to hide the server header for older versions of IIS such as IIS 6 and removes the security element which is used for IIS 10 -->
<?xml version="1.0"?>
<configuration xmlns:xdt="http://schemas.microsoft.com/XML-Document-Transform">
  <rewrite xdt:Transform="InsertBefore(/configuration/system.webServer/*)" />
  <system.webServer>
    <security xdt:Transform="Remove"/>
    <rewrite>
      <outboundRules rewriteBeforeCache="true" xdt:Transform="Insert">
        <rule name="Remove Server header">
          <match serverVariable="RESPONSE_Server" pattern=".+" />
          <action type="Rewrite" value="" />
        </rule>
      </outboundRules>
    </rewrite>
  </system.webServer>  
</configuration>
      